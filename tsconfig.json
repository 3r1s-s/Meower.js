{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */

    /* Language and Environment */
    "target": "ES2021",        
                              
    "lib": [
      "ES2023",
      "DOM"
    ],                                                   

    /* Modules */
    "module": "commonjs",                                

    /* JavaScript Support */
    "allowJs": true,                                     
    "checkJs": true,                                     

    /* Emit */
    "outDir": "./dist/",                                 

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
    "noImplicitAny": true,                              
    "noImplicitReturns": true,                           
    "noUncheckedIndexedAccess": true,                    
    "noImplicitOverride": true,                          
    /* Completeness */
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "declaration": true                           
  },
  "include": [
    "src/**/*"
  ]
}
